{
  "env": {
    "smtp": {
      "host": "smtp.example.org",
      "port": 587,
      "user": "SMTP_USER",
      "pass": "SMTP_PASS"
    },
    "sms": {
      "sid": "TWILIO_ACCOUNT_SID",
      "auth": "TWILIO_AUTH_TOKEN"
    }
  },
  "email": {
    "from": "sender@example.com",
    "to": "recipient@example.com",
    "subject": "My Alert",
    "enabled": true
  },
  "sms": {
    "to": "xxx-xxx-xxxxx (recipient, your mobile phone number)",
    "from": "yyy-yyy-yyyy (sender, twilio assigned phone number)",
    "enabled": false
  }
}
